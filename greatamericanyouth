server {
		server_name greatamericanyouth.com ;
		root /var/www/greatamericanyouth ;
		index index.html index.htm index.nginx-debian.html ;
		location / {
			#root /var/www/greatamericanyouth/dist/greatamericanyouth;
			#index index.html ;
			#try_files $uri $uri/ /index.html ;
			proxy_pass http://127.0.0.1:4000;
			proxy_set_header Host $host;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Forwarded-Proto $scheme;
		}
		location /api {
			rewrite ^/api/(.*) /$1 break;
			proxy_pass http://127.0.0.1:5000;
			proxy_set_header Host $host;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Forwarded-Proto $scheme;
		}
		location /socket.io {
			  proxy_pass http://127.0.0.1:5000/socket.io;
			  proxy_http_version 1.1;
			  proxy_set_header Upgrade $http_upgrade;
			  proxy_set_header Connection "upgrade";
			  proxy_set_header Host $host;
		}
		location /article-media {
			alias /var/www/greatamericanyouth/server/article-media;
			allow all;
		}
		location /chat-media {
			alias /var/www/greatamericanyouth/server/chat-media;
			allow all;
		}
		location /ai-graphics {
			alias /var/www/greatamericanyouth/server/ai-graphics;
			allow all;
		}
		location /media {
			alias /var/www/greatamericanyouth/server/media;
			allow all;
		}


    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/greatamericanyouth.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/greatamericanyouth.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = greatamericanyouth.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	        listen 80 ;
		listen [::]:80 ;
		server_name greatamericanyouth.com ;
    return 404; # managed by Certbot


}
